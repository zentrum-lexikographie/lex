#!/usr/bin/env python

from os import execlp
from pathlib import Path

solr_dir = (Path(__file__) / '..' / '..' / 'solr').resolve().as_posix()

execlp(
    'docker',
    'docker',
    'run',
    '-t', '-d',
    '--name', 'zdl_lex_solr',
    '-p', '8983',
    '-v', ':'.join([solr_dir, '/config']),
    'solr:7.7.1',
    'solr-create', '-c', 'articles', '-d', '/config'
)
